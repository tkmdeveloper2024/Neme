<Page x:Class="Neme.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
       xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Neme.Pages"
      mc:Ignorable="d" 
      MinHeight="610"       
      MinWidth="880" 
      Loaded="Page_Loaded"
      Title="Page1">

    <Border  
                Margin="10 10 0 10"
                Background="White">
        <ScrollViewer VerticalScrollBarVisibility="Auto" >
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
            <Grid Grid.Row="0"
                 VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  >
                <Label 
                        Foreground="#035B57"
                        Margin="20 20 0 0"
                        FontFamily="DM Sans"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontSize="20"
                MaxWidth="282"
                MaxHeight="40"
                    
                        FontWeight="Bold"
                        >
                    Täze wezipe görnüş girizmek
                </Label>
            </Grid>
            <Grid Grid.Row="1"
                VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  >
                
                <Grid Grid.Column="0"
                      Margin="0 0 0 10"
                     VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch" 
                      >
                    <Label Grid.Row="0"
                        Foreground="#035B57"
                        Margin="20 0 0 0"
                        FontFamily="DM Sans"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        FontSize="14"                        
                        >
                        Ady*
                    </Label>
                    <Border
                    VerticalAlignment="Top"
                    HorizontalAlignment="Stretch"
                    CornerRadius="0"
                    Margin="20 25 20 0"
                     
                     MaxHeight="40"
                     MinHeight="40"
                     MinWidth="800"
                  
                    BorderBrush="#035B57"
                    BorderThickness="1"
                    >
                        <TextBox
                    BorderThickness="0"
                    Background="Transparent"                    
                    Foreground="#035B57"                     
                    Padding="10"   
                            KeyDown="Save_KeyDown"
                            Name="Adytxt"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch" 
                    >

                        </TextBox>
                    </Border>
                </Grid>
               
            </Grid>
            <Grid Grid.Row="2"
                VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  >

                <Grid Grid.Column="0"
                      Margin="0 0 0 10"
                     VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch" 
                      >
                    <Label Grid.Row="0"
                        Foreground="#035B57"
                        Margin="20 0 0 0"
                        FontFamily="DM Sans"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        FontSize="14"                        
                        >
                        Buýruk belgi*
                    </Label>
                    <Border
                    VerticalAlignment="Top"
                    HorizontalAlignment="Stretch"
                    CornerRadius="0"
                    Margin="20 25 20 0"
                     
                     MaxHeight="40"
                     MinHeight="40"
                     MinWidth="800"
                  
                    BorderBrush="#035B57"
                    BorderThickness="1"
                    >
                        <TextBox
                    BorderThickness="0"
                    Background="Transparent"                    
                    Foreground="#035B57"                     
                    Padding="10"
                            KeyDown="Save_KeyDown"
                            Name="Buyrukbelgi"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    >

                        </TextBox>
                    </Border>
                </Grid>

            </Grid>
            <Grid Grid.Row="3"
                VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  >

                <Grid Grid.Column="0"
                      Margin="0 0 0 10"
                     VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch" 
                      >
                    <Label Grid.Row="0"
                        Foreground="#035B57"
                        Margin="20 0 0 0"
                        FontFamily="DM Sans"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        FontSize="14"                        
                        >
                      Buýruk senesi*
                    </Label>
                    <Border
                    VerticalAlignment="Top"
                    HorizontalAlignment="Stretch"
                    CornerRadius="0"
                    Margin="20 25 20 0"
                     
                     MaxHeight="40"
                     MinHeight="40"
                     MinWidth="800"
                  
                    BorderBrush="#035B57"
                    BorderThickness="1"
                    >
                        <DatePicker
                    BorderThickness="0"
                    Background="Transparent"                    
                    Foreground="#035B57"                     
                    Padding="10"   
                            KeyDown="Save_KeyDown"
                            Name="Buyruksene"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    >

                        </DatePicker>
                    </Border>
                </Grid>

            </Grid>
            <Grid Grid.Row="4"
                VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  >                
                <Grid Grid.Column="0"
                      Margin="0 0 0 10"
                     VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch" 
                      >
                    <Label Grid.Row="0"
                        Foreground="#035B57"
                        Margin="20 0 0 0"
                        FontFamily="DM Sans"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        FontSize="14"                        
                        >
                        Görnüş*
                    </Label>
                    <Border
                    VerticalAlignment="Top"
                    HorizontalAlignment="Stretch"
                    CornerRadius="0"
                    Margin="20 25 20 0"
                     
                     MaxHeight="40"
                     MinHeight="40"
                     MinWidth="800"
                    BorderBrush="#035B57"
                    BorderThickness="1"
                    >
                        <ComboBox
                    BorderThickness="0"
                    Background="Transparent"                    
                    Foreground="#035B57"
                            Cursor="Hand"
                            KeyDown="Save_KeyDown"
                    Padding="10"
                            Name="Ofisercombo"
                        VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch" 
                    >

                        </ComboBox>
                    </Border>
                </Grid>
               
            </Grid>
            <Grid Grid.Row="5"                 
                  >               
                <Grid Grid.Column="0"
                      Margin="0 0 0 10"
                     VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch"
                      >
                    <Label Grid.Row="0"
                        Foreground="#035B57"
                        Margin="20 0 0 0"
                        FontFamily="DM Sans"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        FontSize="14"                        
                        >
                        Aýlyk zähmet haky*
                    </Label>
                    <Border
                    VerticalAlignment="Top"
                    HorizontalAlignment="Stretch"
                    CornerRadius="0"
                    Margin="20 25 20 0"
                   
                     MaxHeight="40"
                     MinHeight="40"
                     MinWidth="800"
                    BorderBrush="#035B57"
                    BorderThickness="1"
                    >
                        <TextBox
                    BorderThickness="0"
                    Background="Transparent"
                    Foreground="#035B57"
                    Padding="10"
                            KeyDown="Save_KeyDown"
                            PreviewTextInput="Okladtxt_PreviewTextInput"
                            Name="Okladtxt"
                        VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    >

                        </TextBox>
                    </Border>
                </Grid>
               
            </Grid>
            <Grid Grid.Row="6">               
                <Grid Grid.Column="0"  
                      Margin="0 0 0 10"
                       VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch"
                      >
                    <Label Grid.Row="0"
                        Foreground="#035B57"
                        Margin="20 0 0 0"
                        FontFamily="DM Sans"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        FontSize="14"                        
                        >
                        Goşundy*
                    </Label>
                    <Border
                    VerticalAlignment="Top"
                    HorizontalAlignment="Stretch"
                    CornerRadius="0"
                    Margin="20 25 20 0"
                    
                     MaxHeight="40"
                     MinHeight="40"
                     MinWidth="800"
                    BorderBrush="#035B57"
                    BorderThickness="1"
                    >
                        <ComboBox
                    BorderThickness="0"
                    Background="Transparent"                    
                    Foreground="#035B57"   
                            Cursor="Hand"
                    Padding="10"      
                            KeyDown="Save_KeyDown"
                           Name="Gosundycombo"
                       VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    >

                        </ComboBox>
                    </Border>
                </Grid>
              
            </Grid>
            <Grid Grid.Row="7" 
                  Margin="0 20 0 0"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  >  
                    <Button Cursor="Hand"
                            Name="Save"
                            Click="Save_Click"
                            MaxWidth="266"
                            MaxHeight="46"
                            Height="40"
                            MinHeight="40"
                            KeyDown="Save_KeyDown"
                            MinWidth="266"
                            FontSize="20"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="0"
                            Foreground="White"
                            FontFamily="DM Sans"
                            Background="#035B57"
                            BorderThickness="10"                        
                            Content="Hasaba al"
                            FontWeight="Bold"

                    >
                    <Button.Resources>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="border"
                                                        CornerRadius="0"
                                                        BorderThickness="1"
                                                        Background="#035B57"
                                                        BorderBrush="#035B57"  >
                                            <ContentPresenter x:Name="ButtonContentPresenter"
                                                                      VerticalAlignment="Center"
                                                                       HorizontalAlignment="Center" />
                                        </Border>

                                        <ControlTemplate.Triggers>


                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="White"/>
                                                <Setter TargetName="border" Property="TextElement.Foreground" Value="#035B57" />
                                                <Setter TargetName="border" Property="BorderBrush" Value="#035B57" />
                                            </Trigger>


                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Resources>
                </Button>

            </Grid>

            
                <Grid Grid.Row="8">
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>

                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0"
                      Margin="0 0 10 0"
                      >
                        <materialDesign:PackIcon
                      
                     Kind="Filter"
                     Foreground="#292D32"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                    Width="25"
                       Margin="25 10 0 0 "
                     Height="25"
                     />

                        <Button Cursor="Hand"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Width="40"
                    Height="40"       
                            Click="Filterbtn_Click"
                            Name="Filterbtn"
                    BorderBrush="#035B57"                    
                    Margin="20 10 0 0"
                    >
                            <Button.Resources>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border x:Name="border"
                                                        CornerRadius="0"
                                                        BorderThickness="1"
                                                        Background="Transparent"
                                                        BorderBrush="#035B57"  >
                                                    <ContentPresenter x:Name="ButtonContentPresenter"
                                                                      VerticalAlignment="Center"
                                                                       HorizontalAlignment="Center" />
                                                </Border>

                                                <ControlTemplate.Triggers>


                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="Transparent"/>
                                                        <Setter TargetName="border" Property="TextElement.Foreground" Value="White" />
                                                        <Setter TargetName="border" Property="BorderBrush" Value="#035B57" />
                                                    </Trigger>


                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                    <Border Grid.Column="1"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    CornerRadius="0"
                    Margin="10 10 20 0"
                                     
                    BorderBrush="#035B57"
                    BorderThickness="1"
                    >
                        <Grid 
                VerticalAlignment="Stretch"                          
                          HorizontalAlignment="Stretch">
                            <TextBox
                    BorderThickness="0"
                    Background="Transparent"
                    Foreground="#035B57"                     
                    Padding="10"
                    Cursor="Hand"
                    Height="39"
                            Name="Searchtxt"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    TextChanged="Searchtxt_TextChanged"
                            materialDesign:HintAssist.Hint="Gözleg"
                    >

                            </TextBox>
                            <materialDesign:PackIcon
                        Grid.Column="1"
                     Kind="Magnify"
                     Foreground="#292D32"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Right"
                    Width="25"
                       Margin="0 5 5 0 "
                     Height="25"
                     >
                            </materialDesign:PackIcon>
                        </Grid>
                    </Border>

                </Grid>
                <Grid Grid.Row="9" MinHeight="300">
                    <DockPanel LastChildFill="True">
                        <Expander x:Name="Expander_Filter" DockPanel.Dock="Left" 
                                      Visibility="Visible" IsExpanded="False"  
                                      Margin="-55 0 0 0" ExpandDirection="Right" 
                                      Background="{x:Null}"
                                      BorderBrush="Transparent" BorderThickness="1 0 0 0"
                                      Expanded="Expander_Filter_Expanded" Collapsed="Expander_Filter_Collapsed">
                            <Grid Margin="10 0 0 0" Width="240">
                                <StackPanel Orientation="Vertical" Width="auto" Height="auto" Margin="10,20,10,0" VerticalAlignment="Top" HorizontalAlignment="Center">

                                    <TextBlock Text="Filterlemek:" Margin="0 0 0 10" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#035B57" FontWeight="SemiBold" FontSize="20" FontFamily="Roboto"/>

                                    <ComboBox   x:Name="combo1"   Margin="0 0 0 10" Width="220" Height="30" Foreground="Black" materialDesign:HintAssist.Hint="Görnüş" BorderThickness="1" BorderBrush="#423F45" Padding="5" IsEditable="False"/>
                                    <ComboBox   x:Name="combo2"   Margin="0 0 0 10" Width="220" Height="30" Foreground="Black" materialDesign:HintAssist.Hint="Goşundy" BorderThickness="1" BorderBrush="#423F45" Padding="5" IsEditable="False"/>


                                    <Button  Margin="20 10 10 0" Name="FilterGo"
                                         FontSize="16" VerticalAlignment="Center"
                                         HorizontalAlignment="Center"
                                         Foreground="White"
                                         Width="150"
                                         Height="30"
                                     
                                         FontFamily="DM Sans"
                                         Background="#035B57"
                                         BorderThickness="0"
                                         Content="Filter"
                                         FontWeight="Bold"
                                         Click="FilterGo_Click" Cursor="Hand">
                                        <Button.Resources>
                                            <Style TargetType="{x:Type Button}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type Button}">
                                                            <Border x:Name="border"
                                                        CornerRadius="0"
                                                        BorderThickness="1"
                                                        Background="#035B57"
                                                        BorderBrush="#035B57"  >
                                                                <ContentPresenter x:Name="ButtonContentPresenter"
                                                                      VerticalAlignment="Center"
                                                                       HorizontalAlignment="Center" />
                                                            </Border>

                                                            <ControlTemplate.Triggers>


                                                                <Trigger Property="IsPressed" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="White"/>
                                                                    <Setter TargetName="border" Property="TextElement.Foreground" Value="#035B57" />
                                                                    <Setter TargetName="border" Property="BorderBrush" Value="#035B57" />
                                                                </Trigger>


                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Resources>
                                    </Button>

                                </StackPanel>
                            </Grid>
                        </Expander>
                        <DataGrid DockPanel.Dock="Right"
                          Margin="10 0 10 0" Cursor="Hand"
                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                          CellStyle="{DynamicResource DataGridCellStyle1}" x:Name="dataGrid_wezipeler"
                          Style="{DynamicResource DataGridStyle2}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" IsReadOnly="True" Binding="{Binding Id}"  Width="auto"/>
                                <DataGridTextColumn Header="Ady" IsReadOnly="True" Binding="{Binding Name}"  Width="2*" >
                                    <DataGridTextColumn.ElementStyle>
                                        <Style>
                                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Ofiser" IsReadOnly="True" Binding="{Binding Wezipegornushtype}" Width="0.5*"  />
                                <DataGridTextColumn Header="Aýlyk zähmet haky" Binding="{Binding oklad}" IsReadOnly="True" Width="0.5*"/>
                                <DataGridTextColumn Header="Goşundy"  IsReadOnly="True" Binding="{Binding Wezipegoshundylarname}" Width="0.5*"/>
                            </DataGrid.Columns>
                            <DataGrid.Resources>
                                <Style  TargetType="{x:Type DataGridRow}">
                                    <EventSetter Event="MouseDoubleClick" Handler="DataGridRow_MouseDoubleClick"/>
                                    <Setter Property="Cursor" Value="Hand" />
                                    <Setter Property="Margin" Value="0 4 0 0" />
                                    <Setter Property="BorderThickness" Value="0 1 0 0"/>
                                    <Setter Property="BorderBrush" Value="#DFDFDF"/>
                                    <Setter Property="Background" Value="#FFFFFF"/>
                                    <Setter Property="SnapsToDevicePixels" Value="true"/>
                                    <Setter Property="Validation.ErrorTemplate" Value="{x:Null}"/>
                                    <Setter Property="ValidationErrorTemplate">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <TextBlock Foreground="Red" Margin="2,0,0,0" Text="!" VerticalAlignment="Center"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>

                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type DataGridRow}">
                                                <Border x:Name="DGR_Border" Padding="0 8" CornerRadius="5" Background="{TemplateBinding Background}" BorderThickness="0" SnapsToDevicePixels="True">
                                                    <SelectiveScrollingGrid>
                                                        <SelectiveScrollingGrid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </SelectiveScrollingGrid.ColumnDefinitions>
                                                        <SelectiveScrollingGrid.RowDefinitions>
                                                            <RowDefinition Height="*"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </SelectiveScrollingGrid.RowDefinitions>
                                                        <DataGridCellsPresenter Grid.Column="1" ItemsPanel="{TemplateBinding ItemsPanel}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                                        <DataGridDetailsPresenter Grid.Column="1" Grid.Row="1" SelectiveScrollingGrid.SelectiveScrollingOrientation="{Binding AreRowDetailsFrozen, Converter={x:Static DataGrid.RowDetailsScrollingConverter}, ConverterParameter={x:Static SelectiveScrollingOrientation.Vertical}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" Visibility="{TemplateBinding DetailsVisibility}"/>
                                                        <DataGridRowHeader Grid.RowSpan="2" SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical" Visibility="{Binding HeadersVisibility, Converter={x:Static DataGrid.HeadersVisibilityConverter}, ConverterParameter={x:Static DataGridHeadersVisibility.Row}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                                                    </SelectiveScrollingGrid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>


                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#035B57" />
                                            <Setter Property="TextElement.Foreground" Value="White"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#035B57"/>
                                            <Setter Property="TextElement.Foreground" Value="White"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>

                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsSelected" Value="true"/>

                                                <Condition Property="Selector.IsSelectionActive" Value="false"/>

                                            </MultiTrigger.Conditions>
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Setter Property="Background" Value="White"/>
                                        </MultiTrigger>
                                    </Style.Triggers>




                                </Style>
                            </DataGrid.Resources>
                        </DataGrid>
                    </DockPanel>
                </Grid>
                <Grid Grid.Row="10"                  
                  Margin="5 0 5 5 "
                      Background="White">
                    <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <Label
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"                        
                        Foreground="#828282"
                        FontFamily="DM Sans"
                        FontSize="14"
                        Margin="0 10 0 5"
                        >©

                        </Label>
                        <Label
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"                        
                        Foreground="#828282"
                        FontFamily="DM Sans"
                        FontSize="14"
                    Name="Yeartb"
                        Margin="0 10 0 5"
                        >2023

                        </Label>
                        <Label
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"                        
                        Foreground="#828282"
                        FontFamily="DM Sans"
                        FontSize="14"
                        Margin="0 10 0 5"
                        >Türkmenistanyň Içeri işler ministrligi

                        </Label>
                    </StackPanel>

                </Grid>


            </Grid>
        </ScrollViewer>
    </Border>
</Page>
