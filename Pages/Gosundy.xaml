                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    CornerRadius="0"
                    Margin="20 25 20 0"
                    
                     MaxHeight="40"
                     MinHeight="40"
                        MinWidth="800"
                    BorderBrush="#035B57"
                    BorderThickness="1"
                    >                 

                    <TextBox
                    BorderThickness="0"
                    Background="Transparent"                    
                    Foreground="#035B57"                    
                    Padding="6"   
                        KeyDown="Gosundynumber_KeyDown"
                     Name="Gosundynumber"                            
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    >

                        </TextBox>
                    </Border>
              
              
            </Grid>
