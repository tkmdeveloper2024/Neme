                     Kind="Magnify"
                     Foreground="#292D32"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Right"
                    Width="25"
                       Margin="0 5 5 0 "
                     Height="25"
                     >
                        </materialDesign:PackIcon>
                    </Grid>
                </Border>
                <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}"
                          Cursor="Hand"
                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                          Margin="0 50 0 0"
                          CellStyle="{DynamicResource DataGridCellStyle1}" x:Name="dataGrid_latestgosundy"
                          Style="{DynamicResource DataGridStyle2}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="" IsReadOnly="True" CanUserResize="False"  Width="0.2*"/>
                        <DataGridTextColumn Header="Goşundynyň ady" IsReadOnly="True" CanUserResize="False"  Width="0.5*" Binding="{Binding Gosundy_Number}"/>

                        <DataGridTextColumn Header="Goşundynyň mazmuny" Binding="{Binding Gosundy_Subject}" IsReadOnly="True" Width="2*">
                            <DataGridTextColumn.ElementStyle>
                                <Style>
                                    <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>




                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
              
           

